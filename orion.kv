#:kivy 1.11.1

#:import ApertureWidget widgets.aperture.aperture.ApertureWidget
#:import IsoWidget widgets.iso.iso.IsoWidget
#:import ShutterWidget widgets.shutter.shutter.ShutterWidget

BoxLayout:
    orientation:'vertical'

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Orion'
                with_previous: False
            ActionGroup:
                text: 'Camera' 
                mode: 'spinner'
                ActionButton:
                    text: 'Connect'
                ActionButton:
                    text: 'Disconnect'

    GridLayout:
        cols: 2

        TabbedPanel:
            do_default_tab: False
            tab_width: self.width / 3

            TabbedPanelItem:
                text: 'Focus'

            TabbedPanelItem:
                text: 'Frame'
                
            TabbedPanelItem:
                text: 'Sequence'
            
        RelativeLayout:
            size_hint_x: None
            width: 200

            Label:
                text: 'Camera Settings'
                bold: True
                pos_hint: {'top': 1}
                size_hint: 1, .1
                font_size: 18

            BoxLayout:
                orientation: 'vertical'
                size_hint: .95, .5
                pos_hint: {'top': .9, 'center_x': .5}

                Label:
                    text: 'Aperture'
                ApertureWidget:
                Label:
                    text: 'Shutter Speed'
                ShutterWidget:
                Label:
                    text: 'ISO'
                IsoWidget:

            Button:
                text: 'Capture Preview'
                size_hint: 1, .1